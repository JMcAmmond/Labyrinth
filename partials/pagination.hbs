<div class="widget pages-{{pages}}">
    <nav class="pagination" role="navigation">
        {{#if prev}}
            <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-chevron-left"></i> Newer</a>
        {{/if}}
        <span class="page-number">{{page}} of {{pages}}</span>
        {{#if next}}
            <a class="older-posts" href="{{page_url next}}">Older <i class="fa fa-chevron-right"></i></a>
        {{/if}}
    </nav>
</div>